{
  "expo": {
    "name": "bitebudget",
    "slug": "bitebudget",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bitebudget",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bitebudget.app",
      "associatedDomains": [
        "applinks:bitebudget.app",
        "applinks:phantom.app"
      ],
      "usesNonExemptEncryption": false,
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "bitebudget"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.bitebudget",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "bitebudget",
              "host": "wallet"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow BiteBudget to save photos of your receipts.",
          "savePhotosPermission": "Allow BiteBudget to save photos of your receipts.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    
    "experiments": {
      "typedRoutes": true
    }
  }
}
